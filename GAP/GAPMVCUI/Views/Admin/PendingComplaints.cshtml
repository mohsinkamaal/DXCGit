@model IEnumerable<GAPMVCUI.Models.ComplaintViewModel>

@{
    ViewBag.Title = "PendingComplaints";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Of_Crime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Suspect_Name)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category_Of_Crime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Suspect_Name)
        </td>
        
        <td>
            @Html.ActionLink("View", "ViewComplaint", "Admin", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
